{
  "name": "smart-city-poc",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "predev": "run-s generate migrate:deploy",
    "dev": "run-p dev:*",
    "dev:next": "next dev -p 3300",
    "dev:frourio": "frourio-next --watch",
    "dev:hcm": "hcm 'src/**/*.module.css' -w",
    "dev:prisma": "prisma generate --watch",
    "dev:msw": "frourio-next-msw --watch",
    "hcm": "hcm 'src/**/*.module.css'",
    "build": "npm run generate && next build",
    "generate": "run-p generate:*",
    "generate:frourio": "frourio-next && frourio-next-msw",
    "generate:prisma": "prisma generate",
    "migrate:dev": "prisma migrate dev && prisma db seed",
    "migrate:dev:createonly": "prisma migrate dev --create-only",
    "migrate:deploy": "prisma migrate deploy && prisma db seed",
    "migrate:reset": "prisma migrate reset",
    "lint": "run-p lint:*",
    "lint:js": "eslint .",
    "lint:prettier": "prettier --check \"./**/*.{ts,tsx,js}\" --ignore-path .gitignore",
    "lint:style": "stylelint \"src/**/*.css\" --ignore-path .gitignore",
    "lint:prisma": "prisma format",
    "fix:lint": "npm run fix:prettier && npm run lint:js -- --fix && npm run lint:style -- --fix && npm run lint:prisma && npm run fix:prettier",
    "fix:prettier": "npm run lint:prettier -- --write",
    "start": "npm run migrate:deploy && next start",
    "test": "vitest run --coverage",
    "typecheck": "npm run hcm && tsc --noEmit"
  },
  "prisma": {
    "schema": "./prisma",
    "seed": "node -r esbuild-register --enable-source-maps prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.8.2",
    "dotenv": "^16.5.0",
    "next": "^15.1.8",
    "prisma": "^6.8.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "swr": "^2.3.3",
    "ulid": "^3.0.0",
    "zod": "^3.25.28"
  },
  "devDependencies": {
    "@frourio/next": "^0.18.1",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/node": "^22.15.21",
    "@types/pg": "^8.15.2",
    "@types/react": "^19.1.5",
    "@types/react-dom": "^19.1.5",
    "@vitejs/plugin-react-swc": "^3.10.0",
    "@vitest/coverage-v8": "^3.1.4",
    "esbuild": "^0.25.4",
    "esbuild-register": "^3.6.0",
    "eslint": "^9.27.0",
    "eslint-config-flat-gitignore": "^2.1.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.1.0",
    "happy-css-modules": "^4.0.0",
    "jiti": "^2.4.2",
    "jsdom": "^26.1.0",
    "msw": "^2.8.4",
    "next-router-mock": "^1.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "stylelint": "^16.19.1",
    "stylelint-config-recess-order": "^6.0.0",
    "stylelint-config-standard": "^37.0.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^3.1.4"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
